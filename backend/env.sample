# 서버 설정
PORT=3000
NODE_ENV=development

# PostgreSQL 설정
DB_HOST=localhost
DB_PORT=5432
DB_NAME=smarttrade
DB_USER=postgres
DB_PASSWORD=postgres

# Redis 설정
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 크롤링 설정
CRAWLING_MAX_PAGES=5
CRAWLING_REQUEST_DELAY=2000
CRAWLING_TIMEOUT=30000

# API URL (스크립트용)
API_URL=http://localhost:3000

# 참고:
# - 개발 환경: PORT=3000
# - 프로덕션 환경 (GCP Cloud Run): PORT=8080
